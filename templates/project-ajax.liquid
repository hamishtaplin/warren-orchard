{% layout "blank" %}
{% block content %} 

  <div class="gallery" id="gallery-{{request.query.id}}">
    <ul class="gallery-inner" id="gallery-inner-{{request.query.id}}">
    {% for project in global.projects %}
      {% if project.id == {{request.query.id}} %}
        {% for img in project.images %}
          <li class="gallery-item">
            {% capture myimg %}/public/images/content/fullsize/job-{{project.id}}/{{img}}.jpg{% endcapture %}
            {% if mixture.debug  %}
              <div data-src="{{ myimg }}" class="gallery-img  img" />
             {% else %}
              <div data-src="{{ myimg | asset_url }}" class="gallery-img  img" />
            {% endif %}   
          </li>
        {% endfor %}
      {% endif %}
    {% endfor %}
    </ul>
  </div>    


{% endblock %}