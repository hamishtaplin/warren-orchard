<div class="global-width" id="thumbs-container">
	
	{% collection "projects" %}

	<ul class="thumbs  grid  hide" id="thumbs">
		{% for project in collection.items  %}
			<li class="thumb" data-project-id="{{ project.slug | replace: '/projects/', '' }}">
				<a href="{{project.slug}}/0" class="thumb-link">
					<span class="thumb-title"><h2 class="">{{project.title}}</h2></span>

					{% for image in project.images limit: 1  %}
						{% capture thumb %}/public/images/content/thumbs/project-{{project.id}}/{{image}}-436x436.jpg{% endcapture %}
					{% endfor %}
					
					{% if mixture.debug  %}
						<img data-src="{{ thumb }}" class="thumb-img  img" width="436" height="436" />
					 {% else %}
						<img data-src="{{ thumb | asset_url }}" class="thumb-img  img" width="436" height="436" />
					{% endif %}    
				</a>
			</li>
		{% endfor %}		
	</ul>
	{% endcollection %}

	
</div>